{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:jsx-a11y/recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jsx-a11y",
    "import",
    "react-perf",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "useTabs": false,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "bracketSameLine": false,
        "endOfLine": "lf",
        "trailingComma": "none"
      }
    ],
    "no-unused-vars": "off",
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "jsx-quotes": 1,
    "jsx-a11y/anchor-is-valid": "warn",
    "jsx-a11y/label-has-associated-control": "warn",
    "jsx-a11y/click-events-have-key-events": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "import/prefer-default-export": "warn",
    "import/no-mutable-exports": "warn",
    "react-perf/jsx-no-new-function-as-prop": "warn",
    "react-perf/jsx-no-new-object-as-prop": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}