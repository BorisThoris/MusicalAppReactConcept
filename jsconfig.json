{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "src/*.js",
        "src/*.jsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/App.js",
        "src/index.js"
    ],
    "exclude": [
        "node_modules",
        "src/fmodLogic/*.js",
        "src/fmodLogic/**/*.js"
    ]
}